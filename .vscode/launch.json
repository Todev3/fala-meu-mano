    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Attach node",
            "port": 9229,
            "address": "localhost",
            "request": "attach",
            "restart": true,
            "sourceMaps": true,
            "skipFiles": [
              
            ],
            "type": "node",
            "localRoot": "${workspaceRoot}/apps/main-api",
            "remoteRoot": "/app"

        }
    ]
}